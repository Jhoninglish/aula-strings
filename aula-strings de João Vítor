//Desafio:
function fraseParaArray(frase) {
    var palavras = frase.split(' ');
    return palavras;
}

var frase = prompt("Digite uma frase: ");
var resultado = fraseParaArray(frase);
console.log(resultado);

var frutas = ["Banana", "Morango", "Abacaxi", "Laranja", "Ameixa"];

var indiceAbacaxi = frutas.indexOf("Abacaxi");
var tamanhoArray = frutas.length; 

console.log("Índice de 'Abacaxi':", indiceAbacaxi);
console.log("Tamanho do array:", tamanhoArray);
